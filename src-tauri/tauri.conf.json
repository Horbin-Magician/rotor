{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rotor",
  "version": "2.0.0",
  "identifier": "cc.fluctus.rotor",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "icons/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; connect-src 'self' ws://localhost:9001 ipc://localhost ; img-src 'self' 'unsafe-inline' asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  }
}
