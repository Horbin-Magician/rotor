{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rotor",
  "version": "2.0.1",
  "identifier": "cc.fluctus.rotor",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "macOS": {
      "signingIdentity": "-"
    },
    "active": true,
    "targets": "all",
    "resources": [
      "assets/**/*"
    ],
    "icon": [
      "assets/icons/32x32.png",
      "assets/icons/128x128.png",
      "assets/icons/128x128@2x.png",
      "assets/icons/icon.icns",
      "assets/icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; connect-src 'self' ipc://localhost; img-src 'self' data:;"
    }
  }
}
