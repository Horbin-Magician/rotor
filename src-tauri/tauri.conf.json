{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rotor",
  "version": "../package.json",
  "identifier": "cc.fluctus.rotor",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "resources": ["assets/**/*"],
    "icon": [
      "assets/icons/32x32.png",
      "assets/icons/128x128.png",
      "assets/icons/128x128@2x.png",
      "assets/icons/icon.icns",
      "assets/icons/icon.ico"
    ]
  },
  "app": {
    "security": {
      "csp": "default-src 'self' 'unsafe-inline'; connect-src 'self' ipc://localhost http://ipc.localhost; img-src 'self' data:;"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ4RjBFRTQxNEU0NEJBMjAKUldRZ3VrUk9RZTd3Mk44akdOZXg5eTI1Y3RGYmlXNFVqM3Q2L0VBODF3UFN5Z1MvdkFQbHAxdm0K",
      "endpoints": [
        "https://gitee.com/horbin/rotor/releases/download/latest/latest.json",
        "https://github.com/Horbin-Magician/rotor/releases/latest/download/latest.json"
      ]
    }
  }
}
